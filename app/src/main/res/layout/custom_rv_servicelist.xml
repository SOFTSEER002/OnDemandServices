<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:weightSum="1">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_weight="0.18"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/iv_service_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/salon_three" />

        </androidx.cardview.widget.CardView>


        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.54"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_service_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Half Arms Waxing"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_off_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:text="\u20B9 780"
                    android:textColor="@android:color/black"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp">


                    <TextView
                        android:id="@+id/tv_original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="\u20B9 65"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@android:color/black" />
                </FrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/ic_brightness_1_black_24dp" />

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:text="56 % off"
                    android:textColor="#08AD0F"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_servicee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="HONEY WAX"
                    android:textColor="@color/textcolor"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/iv_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ic_brightness_1_black_24dp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="85 min"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textcolor"
                    android:textSize="11dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:gravity="center">

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="35dp">

                <LinearLayout
                    android:id="@+id/ll3_add_service"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@drawable/add_back"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="ADD"
                        android:textColor="#172EE2" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="3dp"
                        android:layout_weight="0.3"
                        android:background="#ECE6E6">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/add_icon" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll3_increment"
                    android:layout_width="70dp"
                    android:background="@drawable/increment_back"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="35dp">

                    <ImageView
                        android:id="@+id/iv3_minus"
                        android:layout_width="0dp"
                        android:src="@drawable/remove"
                        android:layout_weight="0.3"
                        android:layout_height="11dp"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:background="@android:color/white"
                        android:layout_height="33dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="0.4">
                        <TextView
                            android:id="@+id/tv3_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="14dp"
                            android:fontFamily="sans-serif"
                            android:textColor="#172EE2"
                            android:textStyle="bold"
                            android:text="1"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv3_add"
                        android:layout_width="0dp"
                        android:src="@drawable/white_add"
                        android:layout_weight="0.3"
                        android:layout_height="11dp"
                        android:layout_gravity="center"/>



                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/viewcolor" />

</LinearLayout>