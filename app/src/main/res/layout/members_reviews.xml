<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:paddingTop="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:src="@drawable/userr"
        android:layout_height="40dp"
        android:layout_weight="0.1"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.03"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.87">

        <TextView
            android:id="@+id/tv_mem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="Sneha"/>

        <TextView
            android:id="@+id/tv_mem_type"
            android:layout_width="wrap_content"
            android:textSize="11dp"
            android:textColor="#99998F"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"
            android:text="Booked Salon at Home"/>

        <TextView
            android:id="@+id/tv_mem_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="13dp"
            android:fontFamily="sans-serif"
            android:text="Excellent job.Very professional.Removed all tan.."
            android:paddingVertical="2dp"
            android:textColor="@color/textcolor"
            />

        <TextView
            android:id="@+id/tv_mem_reviewdon"
            android:layout_width="wrap_content"
            android:textSize="11dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:textColor="#99998F"
            android:layout_height="wrap_content"
            android:text="Reviewd on Jan 11th, 2019"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/viewcolor"/>

    </LinearLayout>


</LinearLayout>