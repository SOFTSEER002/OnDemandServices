<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:paddingTop="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal">

   <ImageView
       android:layout_width="0dp"
       android:src="@drawable/userr"
       android:layout_height="40dp"
       android:layout_weight="0.1"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.03"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_weight="0.72">

        <TextView
            android:id="@+id/tv_review_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="Sneha"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_review_location"
                android:layout_width="wrap_content"
                android:textSize="11dp"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:text="New Delhi"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_brightness_1_black_24dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_review_date"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="11dp"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:text="6th Aug,2019"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_review_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="13dp"
            android:fontFamily="sans-serif"
            android:text="Excellent job.Very professional.Removed all tan.."
            android:drawablePadding="10dp"
            android:paddingVertical="2dp"
            android:drawableLeft="@drawable/quote"
            android:textColor="@color/textcolor"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/viewcolor"/>

    </LinearLayout>



    <TextView
        android:id="@+id/tv_review_rating"
        android:layout_width="0dp"
        android:text="5.0"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_star_black_24dp"
        android:textColor="#209E11"
        android:drawablePadding="2dp"
        android:fontFamily="sans-serif"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_height="40dp"
        android:layout_weight="0.15"/>

</LinearLayout>