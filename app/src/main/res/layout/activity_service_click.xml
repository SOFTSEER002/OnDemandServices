<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServiceClickActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/iv_clickservice_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.08"
                android:padding="4dp"
                android:src="@drawable/backarrow_black" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05" />

            <TextView
                android:id="@+id/tv3_toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.83"
                android:fontFamily="sans-serif"
                android:textColor="#6D6666"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="#FAF7F4"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#120D75"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif"
                            android:text="Select a Service"
                            android:textColor="@android:color/white"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <!-- <androidx.cardview.widget.CardView
                             android:layout_width="match_parent"
                             app:cardCornerRadius="7dp"
                             android:layout_height="match_parent">-->

                        <GridView
                            android:id="@+id/gv_services"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:numColumns="3"
                            android:smoothScrollbar="true" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:paddingBottom="20dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F89E62" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="0.07"
                                android:src="@drawable/trained_women" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="0.03" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.9"
                                android:fontFamily="sans-serif"
                                android:text="Trained, verified beauticians"
                                android:textColor="@android:color/black"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="0.07"
                                android:src="@drawable/lipstick" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="0.03" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.9"
                                android:fontFamily="sans-serif"
                                android:text="Best brands in 1-time use packs"
                                android:textColor="@android:color/black"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="0.07"
                                android:src="@drawable/stars" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="0.03" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.9"
                                android:fontFamily="sans-serif"
                                android:text="Mess Free Service"
                                android:textColor="@android:color/black"
                                android:textSize="12dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F89E62" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif"
                            android:text="We use sheets and towels to\nmaintain hygiene"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_photos"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginLeft="14dp">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:background="@android:color/white"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif"

                            android:text="We use best brands in 1-time use packs"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:src="@drawable/loreal"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="0.9"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:src="@drawable/lakme"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="0.9"/>
                            <Space
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent" />
                            <ImageView
                                android:src="@drawable/maybelline"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:src="@drawable/oriflame"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="0.9"/>
                            <Space
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:src="@drawable/elle"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="0.9"/>
                            <Space
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:src="@drawable/garnier"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"/>
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_banner"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/women_banner"
                        android:layout_height="220dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:text="Over 10,000 Great Experiences"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_reviews"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.001"
            android:background="@color/viewcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.099">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/button_back"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif"
                    android:text="View all services"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold"


                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>